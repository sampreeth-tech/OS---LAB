#include <stdio.h>
#include <string.h>

struct {
    char fname[20];  
} directory[10];

int main() {
    int n = 0, choice;
    char name[20];

    while (1) {
        printf("\n---- Single Level Directory ----\n");
        printf("1. Create File\n");
        printf("2. Delete File\n");
        printf("3. Search File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1: // Create
            if (n >= 10) {
                printf("Directory is full!\n");
                break;
            }
            printf("Enter file name to create: ");
            scanf("%s", name);

            int exists = 0;
            for (int i = 0; i < n; i++) {
                if (strcmp(directory[i].fname, name) == 0) {
                    exists = 1;
                    break;
                }
            }
            if (exists)
                printf("File already exists!\n");
            else {
                strcpy(directory[n].fname, name);
                n++;
                printf("File created successfully.\n");
            }
            break;

        case 2: 
            printf("Enter file name to delete: ");
            scanf("%s", name);
            int found = 0;
            for (int i = 0; i < n; i++) {
                if (strcmp(directory[i].fname, name) == 0) {
                    found = 1;
                    for (int j = i; j < n - 1; j++)
                        directory[j] = directory[j + 1];
                    n--;
                    printf("File deleted successfully.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 3: 
            printf("Enter file name to search: ");
            scanf("%s", name);
            found = 0;
            for (int i = 0; i < n; i++) {
                if (strcmp(directory[i].fname, name) == 0) {
                    found = 1;
                    printf("File found: %s\n", directory[i].fname);
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 4: 
            if (n == 0)
                printf("Directory is empty!\n");
            else {
                printf("Files in directory:\n");
                for (int i = 0; i < n; i++)
                    printf("%s\n", directory[i].fname);
            }
            break;

        case 5: 
            return 0;

        default:
            printf("Invalid choice!\n");
        }
    }
}
