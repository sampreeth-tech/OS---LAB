#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
void* threadFunction(void* arg) {
    int threadNum = *((int*)arg);
    printf("Hello from Thread %d\n", threadNum);
    return NULL;
}

int main() {
    pthread_t t1, t2;  // Two threads
    int arg1 = 1, arg2 = 2;

    pthread_create(&t1, NULL, threadFunction, &arg1);
    pthread_create(&t2, NULL, threadFunction, &arg2);

    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    printf("Main thread finished execution.\n");
    return 0;
}
